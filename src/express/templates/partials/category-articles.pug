ul.preview__list
  each article in articles
    li(class=`preview__item ${article.img ? '' : 'preview__item--noimage'}`)
      ul.preview__breadcrumbs
        li.preview__breadcrumbs-item
          a.preview__breadcrumbs-link(href='#') #{article.title}
      if article.img
        .preview__background
          img.preview__background-image(src=`/img/${article.img}` width='460' height='240' srcset=`/img/${article.img}` alt=`${article.title}`)
      time.preview__time(datetime=`${article.createdDate}`) #{article.createdDate}
      h3.preview__name
        a.preview__name-link(href='#') #{article.title}
      p.preview__text  #{article.announce}
      a.preview__comment(href='#')
        | Комментарии
        span.preview__cloud
        b.preview__comment-count #{article.comments.length}
